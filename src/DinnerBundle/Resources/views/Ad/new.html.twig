{% extends 'base.html.twig' %}

{% block title %}New ad {% if guest is defined %}for {{ guest }} {% endif %}| {{ parent() }}{% endblock %}

{% block body %}
    <h1>Ad creation</h1>

    <section class="ad-form">
        {{ form_start(form) }}

        {{ form_row(form.adType) }}
        {{ form_row(form.copy) }}
        {{ form_row(form.note) }}

        <div>
            {{ form_label(form.sentToPrinter) }}
            <div>
                {{ form_widget(form.sentToPrinter) }}
                <button class="sent-to-printer-button" type="button">Send now</button>
            </div>
        </div>

        {{ form_row(form.proofFromPrinter) }}
        {{ form_row(form.proofApproved) }}
        {{ form_row(form.guests) }}

        <div>
            <div class="label">&nbsp;</div>
            <div>
                <input type="submit" value="Create"/>
            </div>
        </div>

        {{ form_end(form) }}

        <div>
            <div class="label">&nbsp;</div>
            <div>
                <nav class="form-controls">
                    <a href="{{ path('ad_index') }}">Cancel</a>
                </nav>
            </div>
        </div>
    </section>
{% endblock %}
